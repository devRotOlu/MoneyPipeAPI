{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Run API + Worker",
      "configurations": [
        ".NET API",
        ".NET Worker"
      ]
    }
  ],
  "configurations": [
    {
      "name": ".NET API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/MoneyPipe.API/bin/Debug/net8.0/MoneyPipe.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/MoneyPipe.API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": ".NET Worker",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/MoneyPipe.Workers/bin/Debug/net8.0/MoneyPipe.Workers.dll",
      "args": [],
      "cwd": "${workspaceFolder}/MoneyPipe.Workers",
      "stopAtEntry": false,
      "env": {
        "DOTNET_ENVIRONMENT": "Development"
      }
    }
  ]
}
